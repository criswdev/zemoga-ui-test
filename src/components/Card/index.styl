:local
  .card
    color #fff
    background-size cover
    background-repeat no-repeat
    background-position center center
    display flex
    flex-direction column
    
  
  .cardContent
    height 70vh
    padding 40px
    max-height 550px
    display flex
    flex-direction column
    justify-content flex-end
    align-items baseline
    background-image -moz-linear-gradient( 270deg, rgba(0,0,0,0.1) 20%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.8) 100%)
    background-image -webkit-linear-gradient( 270deg, rgba(0,0,0,0.1) 20%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.8) 100%)
    background-image -ms-linear-gradient( 270deg, rgba(0,0,0,0.1) 20%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.8) 100%)

  .title
    position relative

  .description
    max-width 360px
    padding-bottom 15px
  
  .time
    padding 10px 0
  
  .cardButtons
    display flex
    width 100%
    height 50px
    max-width 200px
    justify-content space-between
  
.thumbsState
  width 30px
  height 30px
  position absolute
  left -40px
  top calc(100% - 30px - 0.14em)
